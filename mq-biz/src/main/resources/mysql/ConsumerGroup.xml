<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.baracklee.mq.biz.dal.meta.ConsumerGroupRepository">
    <resultMap id="LastUpdateMap" type="com.baracklee.mq.biz.entity.LastUpdateEntity">
        <result column="lastDate" property="lastDate"/>
        <result column="maxId" property="maxId"/>
        <result column="count" property="count"/>
    </resultMap>
    <resultMap id="BaseResultMap"
               type="com.baracklee.mq.biz.entity.ConsumerGroupEntity">
        <result column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="dpt_name" property="dptName"/>
        <result column="topic_names" property="topicNames"/>
        <result column="owner_ids" property="ownerIds"/>
        <result column="owner_names" property="ownerNames"/>
        <result column="alarm_emails" property="alarmEmails"/>
        <result column="tels" property="tels"/>
        <result column="ip_white_list" property="ipWhiteList"/>
        <result column="ip_black_list" property="ipBlackList"/>
        <result column="alarm_flag" property="alarmFlag"/>
        <result column="trace_flag" property="traceFlag"/>
        <result column="remark" property="remark"/>
        <result column="rb_version" property="rbVersion"/>
        <result column="meta_version" property="metaVersion"/>
        <result column="version" property="version"/>
        <result column="insert_by" property="insertBy"/>
        <result column="insert_time" property="insertTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="update_time" property="updateTime"/>
        <result column="is_active" property="isActive"/>
        <result column="consumer_count" property="consumerCount"/>
        <result column="app_id" property="appId"/>
        <result column="consumer_quality" property="consumerQuality"/>
        <result column="meta_update_time" property="metaUpdateTime"/>
        <result column="mode" property="mode"/>
        <result column="origin_name" property="originName"/>
        <result column="sub_env" property="subEnv"/>
        <result column="push_flag" property="pushFlag"/>

    </resultMap>
    <update id="updateRbVersion">
        update consumer_group set version=version+1, rb_version=rb_version+1
        where id in
        (
        <foreach collection="ids" item="id" index="index" separator=",">#{id}</foreach>
        )
    </update>
    <select id="getLastUpdate" resultMap="LastUpdateMap" useCache="false">
select max(meta_update_time) as lastDate,max(id) as maxId,count(1) as 'count' from consumer_group
</select>
    <select id="getByNames" resultMap="BaseResultMap" useCache="false" parameterType="java.util.List">
        select * from consumer_group where name in
        <foreach collection="names" index="index" item="item" open="("
                 separator="," close=")">
            #{item}
        </foreach>
    </select>
    <select id="getLastConsumerGroup" resultMap="BaseResultMap"
            useCache="false">
		<![CDATA[
        select * from consumer_group where id in (select distinct consumer_group_id
                                                  from notify_message where	id>#{minMessageId} and id<=#{maxMessageId} and message_type=#{messageType})
        ]]>
	</select></mapper>